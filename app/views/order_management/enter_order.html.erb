<%=page_attr_display(@page, "true") %>


<div class="myaccountblock" Align="Left">
    <div class="cart-title" > <% Settings.use_shipping_address == "true" ? "Shipping and " : ""%>Billing Information</div>

    <div id="bride-info">
       <%=bride_edit_div(@cart.bride) %>
       <div id="first-name" class="bride-info-item">
            <%=@cart.bride.user.user_attribute.first_name%>
        </div>
        <div id="last-name" class="bride-info-item">
            <%=@cart.bride.user.user_attribute.last_name%>

        </div>
        <div id="wedding-date" class="bride-info-item">
            <%=@cart.bride.wedding_date.strftime("%m/%d/%Y") %>
        </div>
    </div>
    
    <div align="center">
        <!-- START:flash -->
        <% if notice -%>
          <div id="notice"><%= notice  %></div>
        <% end -%>
        <!-- END:flash -->

        <% if @order.errors.any? %>
          <div id="error_explanation">
              <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

              <ul>
                  <% @order.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
              </ul>
          </div>
        <% end %>

    </div>

    <div class="myaccountblock">
        <% if !@order.express_token.blank? %>
          <%= render 'enter_order_express_form' %>
        <% else %>
          <%= render 'enter_order_form' %>
        <% end %>

    </div>




