      <div class="cart-shipping-body">
<%#= render :partial=>"shipping_tool.html", :locals=>{:build_order=>@build_order, :shipping_methods=>@shipping_methods} %>
      </div> 
    -->
</div>

<div class="cart-summary">
    <%@build_order = build_order %>
    <%  if Coupon.active then %>
      <div class="cart-header-font cart-coupon-header">
          Coupon Code
      </div>
      <div class="cart-coupon-code">
          <p>
              <%=editablefieldcreate("coupon_code", @build_order,"Enter Code",{:path=>"cart_update"})%>
          </p>
      </div>
    <% end %>
